<form method="post" enctype="multipart/form-data">
    <div class="Konuşma Metni">
        <label>Sohbet Metni:</label><br />
        <textarea name="conversation" rows="5" cols="60"></textarea><br />
    </div>
    <div class="form-group">
        <label>WhatsApp Konuşma Dosyası:</label>
        <input type="file" name="chatFile" accept=".txt" class="form-control" />
    </div>

    <div class="form-group">
        <label>Kaç Günlük Konuşmayı Analiz Etmek İstiyorsunuz?</label>
        <select name="dayCount" class="form-control">
            <option value="1">Son 1 gün</option>
            <option value="2">Son 2 gün</option>
            <option value="3" selected>Son 3 gün</option>
        </select>
    </div>

    <div class="form-group">
        <label>Analiz Türü:</label>
        <select name="type" class="form-control">
            <option value="flirt">Flört</option>
            <option value="conflict">Tartışma</option>
            <option value="friendship">Arkadaşlık</option>
            <option value="family">Aile</option>
            <option value="professional">İş/Profesyonel</option>
            <option value="general">Genel Analiz</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Analiz Et</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}

@if (ViewBag.AnalysisResult != null)
{
    <div class="mt-4">
        <h3>Analiz Sonucu:</h3>
        <div class="card">
            <div class="card-body">
                <pre>@ViewBag.AnalysisResult</pre>
            </div>
        </div>
    </div>
}

@if (ViewBag.IncludedDates != null)
{
    <div class="mt-4 mb-4">
        <h4>Analiz Edilen Tarihler:</h4>
        <div class="alert alert-info">
            Son @ViewBag.DayCount gün içindeki konuşmalar analiz edildi:
            <ul class="mt-2">
                @foreach (var date in ViewBag.IncludedDates)
                {
                    <li>@date.ToString("dd.MM.yyyy")</li>
                }
            </ul>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Analiz Edilen Konuşma</h5>
        </div>
        <div class="card-body">
            <pre style="max-height: 300px; overflow-y: auto;">@ViewBag.FilteredConversation</pre>
        </div>
    </div>
}