@{
    ViewData["Title"] = "Cevap Önerileri";
}

<div class="container">
    <h2 class="mt-4 mb-3">Konuşma Cevap Önerileri</h2>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3>Konuşma Bilgilerinizi Girin</h3>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label>Konuşma Metni:</label>
                    <textarea name="conversation" rows="5" class="form-control" placeholder="Son mesajın karşıdan geldiği bir konuşmayı buraya yapıştırın..."></textarea>
                    <small class="text-muted">Son mesaj karşı taraftan olmalı ki size cevap önerileri sunabilelim.</small>
                </div>

                <div class="form-group mb-3">
                    <label>veya WhatsApp Konuşma Dosyası:</label>
                    <input type="file" name="chatFile" accept=".txt" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label>Kaç Günlük Konuşmayı Analiz Etmek İstiyorsunuz?</label>
                    <select name="dayCount" class="form-control">
                        <option value="1">Son 1 gün</option>
                        <option value="2">Son 2 gün</option>
                        <option value="3" selected>Son 3 gün</option>
                        <option value="7">Son 1 hafta</option>
                        <option value="30">Son 1 ay</option>
                    </select>
                    <small class="text-muted">Bu seçenek sadece dosyadan yüklenen konuşmalar için geçerlidir.</small>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-between mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-lightbulb"></i> Cevap Önerileri Al
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }

    @if (ViewBag.SuggestedResponses != null)
    {
        <div class="card mt-4 mb-4">
            <div class="card-header bg-success text-white">
                <h3>Cevap Önerileri</h3>
            </div>
            <div class="card-body">
                <pre class="p-3 bg-light">@ViewBag.SuggestedResponses</pre>
            </div>
        </div>

        @if (ViewBag.IncludedDates != null && ViewBag.IncludedDates.Count > 0)
        {
            <div class="mt-4 mb-4">
                <h4>Analiz Edilen Tarihler:</h4>
                <div class="alert alert-info">
                    Son @ViewBag.DayCount gün içindeki konuşmalar analiz edildi:
                    <ul class="mt-2">
                        @foreach (var date in ViewBag.IncludedDates)
                        {
                            <li>@date.ToString("dd.MM.yyyy")</li>
                        }
                    </ul>
                </div>
            </div>
        }

        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h4>Orijinal Konuşma</h4>
            </div>
            <div class="card-body">
                <pre style="max-height: 300px; overflow-y: auto;" class="p-3 bg-light">@ViewBag.OriginalConversation</pre>
            </div>
        </div>
    }
</div>